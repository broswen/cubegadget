<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="CubeGadget" packages="">
    <Appenders>
        <RandomAccessFile name="MyFile" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </RandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>